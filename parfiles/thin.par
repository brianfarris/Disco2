EOSPar2            0.0      // Radiation
EOSPar3            0.0      // Degeneracy
EOSPar4            0.0      // Burning

//Cooling
CoolingType         2       //0 None, 1 Isothermal, 2 Blackbody-Thompson,
                            //3 Blackbody-freefree, 4 Neutrino-Approx,
                            //5 Neutrino-Itoh
CoolPar1            1.0     // Coefficient
CoolPar2            0.0     //
CoolPar3            0.0
CoolPar4            0.0

//Initial Condition Parameters
InitPar0        3           // 0 Rigid, 1 Kepler, 2 Alpha, 3 Spread
InitPar1        1.0e3       // Sig0
InitPar2        1.0e-4      // T0
InitPar3        2.0e1       // r0
InitPar4        1.0         // dr
InitPar5        0.0         // 
InitPar6        0.0         // 

